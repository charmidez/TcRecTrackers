<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TcRec" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textTitle">
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="textMidTitle">
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="textGbalo">
        <item name="android:fontFamily">@font/source_sans_pro_light</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="textGridview">
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!--image_design-->
    <style name="imageRadius_corner">
        <item name="android:radius">@dimen/radius</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="progressBar_style">


    </style>

    <style name="switch_btn" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/yellow</item>
    </style>
</resources>