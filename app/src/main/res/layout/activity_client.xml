<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.clientloginadmin.ClientActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--entête -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/all_margin"
                android:layout_marginLeft="@dimen/all_margin"
                android:layout_marginRight="@dimen/all_margin"
                android:orientation="horizontal">
                <!--Button Retour-->
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnBackToPreviousFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_button_fragment"
                    android:background="@color/white"
                    android:padding="@dimen/padd"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Suivis de mon colis"
                    style="@style/textMidTitle_result"
                    android:padding="@dimen/all_padding"
                    android:background="@drawable/rounded_blue_background"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <!--image-->
            <ImageView
                android:id="@+id/imgView_cargaison"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="@dimen/all_margin"
                android:src="@drawable/cargaison"/>

            <!-- bare de recherche -->
            <LinearLayout
                android:id="@+id/lineairLayout_search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/all_margin"
                android:layout_marginLeft="@dimen/all_margin"
                android:layout_marginRight="@dimen/all_margin">
                <EditText
                    android:id="@+id/editText_search_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:cursorVisible="true"
                    android:hint="MSMY239934..."
                    android:layout_marginRight="@dimen/all_margin"
                    android:padding="@dimen/all_padding"
                    android:textColor="@color/black"
                    android:background="@drawable/rounded_white_black_contour"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/padd"
                    android:src="@drawable/ic_search_1"
                    android:background="@drawable/rounded_blue_background"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtView_notabebe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white_back_white"
                android:paddingLeft="@dimen/padd"
                android:layout_marginLeft="@dimen/all_margin"
                android:layout_marginRight="@dimen/all_margin"
                android:fontFamily="@font/source_sans_pro_bold"
                android:textSize="8dp"
                android:text="Suivre mon colis par son numéro Contenair, Booking, Réference..."/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scrollbars="vertical"
                tools:listitem="@layout/item_result"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="@dimen/all_margin"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_nouvelle_recherche"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nouvelle Recherche"
                android:layout_margin="@dimen/all_margin"
                android:background="@drawable/rounded_blue_corner_view_2"
                android:textSize="14dp"
                android:textAllCaps="false"
                android:fontFamily="@font/source_sans_pro_black"/>

        </LinearLayout>

</FrameLayout>