<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/all_padding"
        android:paddingRight="@dimen/all_padding"
        android:paddingBottom="@dimen/all_padding">

        <View
            android:layout_width="64dp"
            android:layout_height="4dp"
            android:background="@drawable/view_tiret_slide_background"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/all_margin_demi"
            android:layout_marginBottom="@dimen/all_margin_demi"/>

        <TextView
            android:id="@+id/txtView_pop_up"
            android:layout_margin="@dimen/all_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/bind_txt_tc_second"
            android:textColor="@color/black"
            style="@style/textTitle"
            android:textSize="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldPlombNum_tc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/all_margin"
            android:hint="@string/bind_num_vraie_un"
            app:boxBackgroundColor="@color/gray"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/gray2_not_selected"
            app:startIconDrawable="@drawable/ic_tc"
            android:textColorHint="@color/gray2_not_selected"
            app:startIconTint="@color/gray2_not_selected">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputPlombNum_tc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_editable_text"
                android:inputType="textCapCharacters"
                android:textAllCaps="true"
                android:textColor="@color/textColor" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldPlombNum_tc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/all_margin"
            android:hint="@string/bind_num_vraie_second"
            app:boxBackgroundColor="@color/gray"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/grisabsolut"
            app:startIconDrawable="@drawable/ic_tc"
            android:textColorHint="@color/gray2_not_selected"
            app:startIconTint="@color/gray2_not_selected">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputPlombNum_tc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_editable_text"
                android:inputType="textCapCharacters"
                android:textAllCaps="true"
                android:textColor="@color/textColor" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_recup_PlombNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_drawable_red"
            android:fontFamily="@font/source_sans_pro_bold"
            android:paddingLeft="@dimen/all_padding"
            android:paddingRight="@dimen/all_padding"
            android:text="@string/ajout_bind_num_vraie"
            android:textColor="@color/white" />


    </LinearLayout>

</FrameLayout>