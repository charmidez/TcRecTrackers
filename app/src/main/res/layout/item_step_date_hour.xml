<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lineairLaout_etap_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/all_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgView_validate_or_not_icone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_ok"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/all_margin_demi"/>

        <TextView
            android:id="@+id/txtView_step_desc_validate_or_not"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tc arrivé au port le Mardi 18 Juin 2023 à 16h30"
            android:padding="@dimen/padd"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/source_sans_pro_bold"
            android:background="@drawable/rounded_blue_corner_view"/>
    </LinearLayout>

</FrameLayout>