<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/gray"
    app:cardCornerRadius="16dp"
    android:layout_margin="@dimen/padd"
    android:elevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padd">

        <!--label num TC-->
        <ImageView
            android:id="@+id/imgView_tc_item"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_tc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Numero TC-->
        <TextView
            android:id="@+id/textViewTCNum_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/all_margin"
            android:background="@drawable/rounded_corner_view"
            android:padding="@dimen/padd"
            android:text="@string/num_tc_item"
            android:textColor="@color/blue"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgView_tc_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imgView_tc_item"
            app:layout_constraintTop_toTopOf="@+id/imgView_tc_item"
            app:layout_constraintVertical_bias="0.0" />

        <!-- Tiret 1-->
        <View
            android:id="@+id/divider"
            android:layout_width="370dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/all_margin"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTCNum_item" />

        <!--Label  camion-->
        <ImageView
            android:id="@+id/imgView_numcamion"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/all_margin"
            android:src="@drawable/ic_cam"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <!--NumÃ©ro Camion-->
        <TextView
            android:id="@+id/textViewCamionNum_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/all_margin"
            android:background="@drawable/rounded_corner_view"
            android:padding="@dimen/padd"
            android:text="@string/num_camion_item"
            android:textColor="@color/blue"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgView_numcamion"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imgView_numcamion"
            app:layout_constraintTop_toTopOf="@+id/imgView_numcamion"
            app:layout_constraintVertical_bias="0.0" />

        <!-- Date -->

        <!-- Tiret 2-->
        <TextView
            android:id="@+id/date_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8/02/2023"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:padding="@dimen/padd"
            android:backgroundTint="@color/date_color"
            android:background="@drawable/rounded_corner_view"
            android:layout_marginLeft="@dimen/all_margin"
            app:layout_constraintBottom_toBottomOf="@+id/textViewCamionNum_item"
            app:layout_constraintStart_toEndOf="@+id/textViewCamionNum_item"
            app:layout_constraintTop_toTopOf="@+id/textViewCamionNum_item" />

        <View
            android:id="@+id/divider2"
            android:layout_width="370dp"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/all_margin"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/step_view_item" />

        <!--Step View >
        <com.shuhart.stepview.StepView
            android:id="@+id/step_view_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padd"
            android:paddingBottom="@dimen/padd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:sv_animationType="Circle"
            app:sv_doneCircleColor="@color/blue"
            app:sv_doneCircleRadius="12dp"
            app:sv_doneStepLineColor="@color/blue"
            app:sv_doneStepMarkColor="@color/blue"
            app:sv_doneTextColor="@color/white"
            app:sv_nextStepLineColor="@color/yellow"
            app:sv_nextTextColor="@color/blue"
            app:sv_selectedCircleColor="@color/blue"
            app:sv_selectedCircleRadius="12dp"
            app:sv_selectedStepNumberColor="@color/white"
            app:sv_selectedTextColor="@color/white"
            app:sv_stepLineWidth="1dp"
            app:sv_stepNumberTextSize="12sp"
            app:sv_stepPadding="4dp"
            app:sv_stepViewStyle="@style/StepView"
            app:sv_typeface="@font/source_sans_pro_bold" /-->

        <com.charmidezassiobo.tcrec.data.CurrentStepTransform
            android:id="@+id/step_view_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:sv_selectedCircleColor="@color/colorAccent"
            app:sv_selectedTextColor="@color/colorAccent"
            app:sv_stepLineWidth="1dp"
            app:sv_stepPadding="4dp"
            app:sv_nextTextColor="@color/colorAccent"
            app:sv_nextStepLineColor="@color/gray2"
            app:sv_doneCircleColor="@color/colorAccent"
            app:sv_doneStepLineColor="@color/colorAccent"
            app:sv_doneCircleRadius="12dp"
            app:sv_selectedCircleRadius="12dp"
            app:sv_selectedStepNumberColor="@color/white"
            app:sv_stepViewStyle="@style/StepView"
            app:sv_doneStepMarkColor="@color/white"
            app:sv_stepNumberTextSize="12sp"
            app:sv_animationType="Line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            />


        <!--Button next-->
        <Button
            android:id="@+id/button_suivant_item"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/all_margin"
            android:background="@drawable/rounded_corner_view"
            android:text="Suivant"
            app:layout_constraintBottom_toBottomOf="@+id/date_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/date_item"
            app:layout_constraintTop_toTopOf="@+id/date_item" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>