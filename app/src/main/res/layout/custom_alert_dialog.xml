<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/all_padding"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtView_titleAlertDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_margin"
            android:fontFamily="@font/source_sans_pro_bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Title"
            android:layout_gravity="center"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/txtView_messageAlertDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_semi_bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/all_margin"
            android:layout_marginBottom="@dimen/all_margin"
            android:textColor="@color/black"
            android:text="Title"
            android:layout_gravity="center"
            android:textSize="16sp"/>
        <!--Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/all_margin"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonOui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/all_margin"
                android:layout_weight="1"
                android:text="Oui"
                android:paddingLeft="@dimen/all_padding"
                android:paddingRight="@dimen/all_padding"
                android:background="@drawable/btn_drawable_red"
                android:fontFamily="@font/source_sans_pro_bold"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonNon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Non"
                android:paddingLeft="@dimen/all_padding"
                android:paddingRight="@dimen/all_padding"
                android:background="@drawable/btn_drawable_call"
                android:fontFamily="@font/source_sans_pro_bold"
                android:textColor="@color/white" />
        </LinearLayout>
</LinearLayout>