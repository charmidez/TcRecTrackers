<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashback">

    <ImageView
        android:id="@+id/imgView_logo"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_blanc" />

    <TextView
        android:id="@+id/txtView_rec_tc_tracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REC TC TRACKER"
        android:fontFamily="@font/source_sans_pro_black"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:layout_below="@+id/imgView_logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        android:layout_above="@+id/app_name"
        android:textColor="@color/grisabsolut"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/source_sans_pro_regular"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_bold"
        android:textColor="@color/grisabsolut"
        android:text="@string/developper"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        />
</RelativeLayout>